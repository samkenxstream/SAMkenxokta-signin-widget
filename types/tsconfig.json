{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "es6", "dom"
    ],
    "noEmit": false,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "target": "es2017",
    "baseUrl": "../",
    "paths": {
      "@okta/okta-signin-widget": [
        "."
      ]
    }
  },
  "include": [
    "../types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}