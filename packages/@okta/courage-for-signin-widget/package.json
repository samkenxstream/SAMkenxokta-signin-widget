{
  "name": "courage-for-signin-widget",
  "version": "1.0.0",
  "description": "Generates a version of Courage for Sign-In Widget",
  "main": "src/CourageForSigninWidget.js",
  "scripts": {
    "prebuild": "yarn link:courage",
    "link:courage": "pushd ./src && ln -shf ../node_modules/@okta/courage/src ./courage && popd",
    "clean:types": "rm -rf ../courage-dist/types && rm -rf ./target",
    "generate:types": "tsc --noEmit false --declaration --emitDeclarationOnly --outDir ./target",
    "copy:types": "mkdir -p ../courage-dist/types && cp -r ./target/packages/@okta/courage-for-signin-widget/src/* ../courage-dist/types/",
    "build:types": "yarn clean:types && yarn generate:types && yarn copy:types",
    "build:webpack": "webpack",
    "build": "yarn build:types && yarn build:webpack"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.7",
    "@okta/babel-plugin-handlebars-inline-precompile": "3.1.0-beta.4200.gf3d0a27",
    "@okta/courage": "4.5.0-6701-g45a1c9f",
    "@okta/eslint-plugin-okta-ui": "0.1.0-beta.4181.g1f38f27",
    "@types/backbone": "^1.4.15",
    "@types/underscore": "^1.11.4",
    "copy-webpack-plugin": "4.6.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.6.2",
    "webpack": "^5.51.1",
    "webpack-bundle-analyzer": "^4.5.0"
  }
}
